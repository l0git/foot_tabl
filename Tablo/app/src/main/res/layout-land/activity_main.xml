<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Java"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="232dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtCSharp"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:text="@string/JavaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CSharp" />

    <Button
        android:id="@+id/ButtJava"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="52dp"
        android:text="@string/CSharpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Java" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="162dp"
        android:text="@string/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset" />

    <TextView
        android:id="@+id/CSharp"
        android:layout_width="101dp"
        android:layout_height="81dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="23dp"
        android:text=":"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/Java"
        app:layout_constraintStart_toEndOf="@+id/CSharp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageCSharp"
        android:layout_width="139dp"
        android:layout_height="174dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/juventus" />

    <ImageView
        android:id="@+id/imageJava"
        android:layout_width="163dp"
        android:layout_height="172dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/barcelona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>